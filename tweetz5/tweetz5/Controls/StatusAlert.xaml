<Popup x:Class="tweetz5.Controls.StatusAlert"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       PopupAnimation="Fade"
       AllowsTransparency="True"
       StaysOpen="False"
       Height="Auto" 
       Width="190"
       TextOptions.TextFormattingMode="Display">
  <Popup.CommandBindings>
    <CommandBinding Command="Close" Executed="CloseCommandHandler"></CommandBinding>
  </Popup.CommandBindings>
  <Border Padding="5" CornerRadius="8" Background="Black" BorderThickness="2" BorderBrush="DarkGoldenrod">
      <StackPanel>
        <TextBlock Foreground="#bbbbbb" 
                   FontFamily="Segoe UI Symbol" 
                   HorizontalAlignment="Right" 
                   Cursor="Hand">
          <TextBlock.InputBindings>
            <MouseBinding MouseAction="LeftClick" Command="Close" />
          </TextBlock.InputBindings>
          &#xE10A;
        </TextBlock>
        <TextBlock Foreground="#bbbbbb"
                   FontSize="14"
                   FontWeight="Heavy"
                   TextAlignment="Center"
                   TextWrapping="Wrap"
                   Margin="15 5 15 15" 
                   x:Name="Message" 
                   Text="No Message for You" />
      </StackPanel>
  </Border>
</Popup>
