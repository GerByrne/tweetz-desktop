<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:tweetz5.Controls"
             xmlns:model="clr-namespace:tweetz5.Model"
             xmlns:tweetz5="clr-namespace:tweetz5"
             xmlns:utilities="clr-namespace:tweetz5.Utilities"
             x:Class="tweetz5.Controls.Timeline"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="300">
  <UserControl.Resources>
    <model:TweetTypeValueConverter x:Key="TweetTypeConverter" />
    <utilities:StringValueVisibilityConverter x:Key="StringValueVisibilityConverter" />
    <utilities:BoolToStringConverter x:Key="BoolToStringConverter" />
    <ContextMenu x:Key="MoreMenu">
      <MenuItem Header="RT (Classic)"
                Command="{x:Static tweetz5:MainWindow.RetweetClassicCommand}"
                CommandParameter="{Binding}" />
      <Separator />
      <MenuItem Header="Copy"
                Command="{x:Static tweetz5:MainWindow.CopyCommand}"
                CommandParameter="{Binding}">
        <MenuItem.Icon>
          <Image Source="..\Assets\Images\Copy_6524.png" />
        </MenuItem.Icon>
      </MenuItem>
    </ContextMenu>
    <Storyboard x:Key="ItemAnimation">
      <DoubleAnimation Storyboard.TargetName="AnimateInsertion"
                       Storyboard.TargetProperty="X"
                       From="-200" To="0" Duration="0:0:0.5" />
      <DoubleAnimation Storyboard.TargetName="AnimateInsertion"
                       Storyboard.TargetProperty="(UIElement.Opacity)"
                       From="0" To="1" Duration="0:0:1" />
    </Storyboard>
  </UserControl.Resources>
  <UserControl.DataContext>
    <model:Timelines />
  </UserControl.DataContext>
  <Grid>
    <ScrollViewer x:Name="TimelineScrollViewer">
      <ItemsControl x:Name="TimelineItems"
                    ItemsSource="{Binding Timeline}"
                    Style="{StaticResource TimelineStyle}">
        <ItemsControl.ItemTemplate>
          <DataTemplate>
            <DataTemplate.Triggers>
              <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                <BeginStoryboard Name="frameLoadedStoryboard" Storyboard="{StaticResource ItemAnimation}" />
              </EventTrigger>
            </DataTemplate.Triggers>
            <Border Style="{StaticResource TweetItemStyle}"
                    Background="{Binding TweetType, Converter={StaticResource TweetTypeConverter}}">
              <Grid x:Name="MyGrid">
                <Grid.RenderTransform>
                  <TranslateTransform x:Name="AnimateInsertion" />
                </Grid.RenderTransform>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Style="{StaticResource TweetImageColumnStyle}" />
                  <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                  <RowDefinition />
                  <RowDefinition />
                  <RowDefinition />
                  <RowDefinition />
                  <RowDefinition />
                </Grid.RowDefinitions>
                <Rectangle Grid.Column="0"
                           Style="{StaticResource TweetImageStyle}">
                  <Rectangle.Fill>
                    <ImageBrush ImageSource="{Binding ProfileImageUrl, Mode=OneTime}" />
                  </Rectangle.Fill>
                </Rectangle>
                <StackPanel Grid.Column="1">
                  <Grid>
                    <Grid.ColumnDefinitions>
                      <ColumnDefinition Width="*" />
                      <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0">
                      <Hyperlink Command="{x:Static tweetz5:MainWindow.ShowUserInformationCommand}"
                                 CommandParameter="{Binding ScreenName, Mode=OneTime}">
                        <Run Text="{Binding Name, Mode=OneTime}" />
                      </Hyperlink>
                    </TextBlock>
                    <TextBlock Grid.Column="1"
                               Style="{StaticResource TweetTimeStyle}"
                               Text="{Binding TimeAgo}" />
                  </Grid>
                  <controls:TextBlockMarkup Grid.Row="1"
                                            Grid.Column="1"
                                            Markup="{Binding MarkupText, Mode=OneTime}"
                                            Style="{StaticResource TweetStyle}" />
                  <TextBlock Grid.Row="1"
                             Grid.Column="1"
                             Style="{StaticResource TweetRetweetedByStyle}"
                             Visibility="{Binding RetweetedBy, Converter={StaticResource StringValueVisibilityConverter}}">
                    <Run Style="{StaticResource TweetActionsSymbol}">&#xE1CA; </Run>
                    <Run Text="{Binding RetweetedBy}"></Run>
                  </TextBlock>
                </StackPanel>
                <TextBlock Grid.Row="2"
                           Grid.ColumnSpan="2"
                           Style="{StaticResource TweetActions}">
                  <Span Style="{StaticResource TweetActionsItem}">
                    <Span.InputBindings>
                      <MouseBinding MouseAction="LeftClick" Command="{x:Static tweetz5:MainWindow.ReplyCommand}" CommandParameter="{Binding}"/>
                    </Span.InputBindings>
                    <Run Style="{StaticResource TweetActionsSymbol}">&#xE248;</Run> Reply&#160;
                  </Span>
                  <Span Style="{StaticResource TweetActionsItem}">
                    <Span.InputBindings>
                      <MouseBinding MouseAction="LeftClick" Command="{x:Static tweetz5:MainWindow.RetweetCommand}" CommandParameter="{Binding}"/>
                    </Span.InputBindings>
                    <Run Style="{StaticResource TweetActionsRetweetSymbol}"
                         Tag="{Binding IsRetweet, Converter={StaticResource BoolToStringConverter}}">&#xE1CA;</Run> Retweet&#160;
                  </Span>
                  <Span Style="{StaticResource TweetActionsItem}">
                    <Span.InputBindings>
                      <MouseBinding MouseAction="LeftClick" Command="{x:Static tweetz5:MainWindow.FavoritesCommand}" CommandParameter="{Binding}"/>
                    </Span.InputBindings>
                    <Run Style="{StaticResource TweetActionsFavoritesSymbol}" 
                         Tag="{Binding Favorited, Converter={StaticResource BoolToStringConverter}}">&#xE082;</Run> Favorite
                  </Span>
                  <Span Style="{StaticResource TweetActionsItem}"
                             ContextMenu="{StaticResource MoreMenu}"
                             PreviewMouseLeftButtonDown="MoreOnMouseDown">
                    <Run Style="{StaticResource TweetActionsSymbol}">&#xE118;</Run>
                  </Span>
                </TextBlock>
                <Separator Grid.Row="3"
                           Grid.ColumnSpan="2"
                           Style="{StaticResource TweetSeparatorTop}" />
                <Separator Grid.Row="4"
                           Grid.ColumnSpan="2"
                           Style="{StaticResource TweetSeparatorBottom}" />
              </Grid>
            </Border>
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>
    </ScrollViewer>
  </Grid>
</UserControl>