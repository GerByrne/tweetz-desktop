<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:tweetz5.Controls" 
        x:Class="tweetz5.MainWindow"
        Title="tweetz" 
        Height="900" 
        MinHeight="200"
        Width="200"
        MinWidth="200"
        ResizeMode="NoResize"
        WindowStyle="None"
        ShowInTaskbar="False"
    SizeChanged="OnSizeChanged"
        Style="{StaticResource WindowStyle}"
        MouseLeftButtonDown="DragMoveWindow">
    <Border
        BorderBrush="Black"
        BorderThickness="1">
        <StackPanel>
            <TextBlock Text="tweetz" 
    			       Foreground="#bbbbbb" 
    			       Background="#333344"
    			       Padding="5,0,0,1"/>
            <local:Timeline x:Name="_timeline"
                            Panel.ZIndex="-1"
                            Height="1050" />
            <Thumb DragDelta="ThumbOnDragDelta"
                   Style="{StaticResource SizeThumbStyle}"/>
        </StackPanel>
    </Border>
</Window>
