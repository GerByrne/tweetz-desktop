<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Color x:Key="AppForegroundColor">#bbbbbb</Color>
  <Color x:Key="AppBackgroundColor">#333333</Color>
  <SolidColorBrush x:Key="AppForegroundBrush">#bbbbbb</SolidColorBrush>
  <SolidColorBrush x:Key="AppBackgroundBrush">#333333</SolidColorBrush>

  <SolidColorBrush x:Key="TitleBarForegroundBrush">#bbbbbb</SolidColorBrush>
  <Color x:Key="TitleBarBackgroundColor">#3C3C3C</Color>
  <SolidColorBrush x:Key="TitleBarBackgroundBrush">#3C3C3C</SolidColorBrush>

  <SolidColorBrush x:Key="HyperLinkBrush">#99bbee</SolidColorBrush>

  <SolidColorBrush x:Key="NavBarForegroundBrush">#666666</SolidColorBrush>
  <SolidColorBrush x:Key="NavBarMouseOverBrush">#557799</SolidColorBrush>

  <SolidColorBrush x:Key="TweetMentionBackgroundBrush">#333933</SolidColorBrush>

  <SolidColorBrush x:Key="StandardBorderBrush" Color="#393939" />
  <SolidColorBrush x:Key="StandardBrush" Color="#393939" />
  <SolidColorBrush x:Key="PressedBrush" Color="#777777" />
  <SolidColorBrush x:Key="HoverBrush" Color="#888888" />
  <SolidColorBrush x:Key="GlyphBrush" Color="{DynamicResource AppBackgroundColor}" />

</ResourceDictionary>